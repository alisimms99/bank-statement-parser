### Deployment (recommended)
# Server port (Cloud Run sets this automatically)
PORT=8080

# Optional secret file mounts (Cloud Run Secret Manager):
# - <KEY>_FILE should point to a file containing the secret value.
#   Example: JWT_SECRET_FILE=/secrets/jwt_secret
#            DATABASE_URL_FILE=/secrets/database_url

# CORS allowlist (comma-separated). Examples:
# - Single origin: https://my-app.web.app
# - Multiple: https://my-app.web.app,https://my-app.firebaseapp.com
# - Any origin (no credentials): *
CORS_ALLOW_ORIGIN=

### Document AI (preferred env keys for deployment)
GOOGLE_PROJECT_ID=
DOCAI_LOCATION=us
# Single processor ID fallback (used for bank/invoice/ocr when specific ones aren't set)
DOCAI_PROCESSOR_ID=

# Toggle Document AI ingestion (true/false)
ENABLE_DOC_AI=false

# Provide service account credentials as JSON string (base64 or plain) or a path to a JSON file
GCP_SERVICE_ACCOUNT_JSON=
GCP_SERVICE_ACCOUNT_PATH=

### Client (Vite)
# If UI and API are hosted separately, set an absolute origin (e.g. https://api.example.com)
VITE_API_URL=

### Backwards-compatible aliases (still supported)
GCP_PROJECT_ID=
GCP_LOCATION=us
DOC_AI_BANK_PROCESSOR_ID=
DOC_AI_INVOICE_PROCESSOR_ID=
DOC_AI_OCR_PROCESSOR_ID=
DOC_AI_FORM_PROCESSOR_ID=
