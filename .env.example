### Deployment (recommended)
# Server port (Cloud Run sets this automatically)
PORT=8080

# CORS allowlist (comma-separated). Examples:
# - Single origin: https://my-app.web.app
# - Multiple: https://my-app.web.app,https://my-app.firebaseapp.com
# - Any origin (no credentials): *
CORS_ALLOW_ORIGIN=
# Cloud Run Secret Manager: Use CORS_ALLOW_ORIGIN_FILE to point to a mounted secret file

### Document AI (preferred env keys for deployment)
GOOGLE_PROJECT_ID=
# Cloud Run Secret Manager: Use GOOGLE_PROJECT_ID_FILE to point to a mounted secret file

DOCAI_LOCATION=us
# Cloud Run Secret Manager: Use DOCAI_LOCATION_FILE to point to a mounted secret file

# Single processor ID fallback (used for bank/invoice/ocr when specific ones aren't set)
DOCAI_PROCESSOR_ID=
# Cloud Run Secret Manager: Use DOCAI_PROCESSOR_ID_FILE to point to a mounted secret file

# Toggle Document AI ingestion (true/false)
ENABLE_DOC_AI=false

# Provide service account credentials as JSON string (base64 or plain) or a path to a JSON file
GCP_SERVICE_ACCOUNT_JSON=
# Cloud Run Secret Manager: Use GCP_SERVICE_ACCOUNT_JSON_FILE to point to a mounted secret file
GCP_SERVICE_ACCOUNT_PATH=

### AI Provider (choose one or use built-in Forge proxy)
# Built-in Forge (recommended for unified access/proxying)
BUILT_IN_FORGE_API_URL=
BUILT_IN_FORGE_API_KEY=

# Direct provider keys (optional if not using Forge)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# Optional model override (e.g., gpt-4o, claude-3-5-sonnet, gemini-2.0-pro)
AI_MODEL=

# Optional pricing for cost logging (USD per 1K tokens)
AI_PRICE_INPUT_PER_1K=
AI_PRICE_OUTPUT_PER_1K=

### Client (Vite)
# If UI and API are hosted separately, set an absolute origin (e.g. https://api.example.com)
VITE_API_URL=

### Backwards-compatible aliases (still supported)
GCP_PROJECT_ID=
GCP_LOCATION=us
DOC_AI_BANK_PROCESSOR_ID=
DOC_AI_INVOICE_PROCESSOR_ID=
DOC_AI_OCR_PROCESSOR_ID=
DOC_AI_FORM_PROCESSOR_ID=
